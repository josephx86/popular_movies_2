<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail_iv"
            android:layout_width="@dimen/movie_trailer_width"
            android:layout_height="@dimen/movie_trailer_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/play_circle_outline"
            app:layout_constraintBottom_toBottomOf="@+id/thumbnail_iv"
            app:layout_constraintEnd_toEndOf="@+id/thumbnail_iv"
            app:layout_constraintStart_toStartOf="@+id/thumbnail_iv"
            app:layout_constraintTop_toTopOf="@+id/thumbnail_iv" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:letterSpacing="0.05"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:lines="2"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/thumbnail_iv"
            app:layout_constraintStart_toStartOf="@+id/thumbnail_iv"
            app:layout_constraintTop_toBottomOf="@+id/thumbnail_iv"
            tools:text="Movie Trailer" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>